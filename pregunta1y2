import csv

# la variable archivo es un objeto iterador
# recorre archivo, i toma cada valor que hay en archivo

# LISTAR LIBROS (OPCION 2)
def listar():
    with open("libros.csv", encoding="utf-8") as f:
        archivo = csv.reader(f)
        datos = []
        next(archivo)  # hace que el objeto iterador se mueva 1 ( no se ve el titulo)

        # listar libros
        for i in archivo:
            datos.append(i)
        for dato in datos:
            print(dato)
    f.close()

opcion = int(input("Ingresa la opcion:"))

if opcion == 2:
    listar()

